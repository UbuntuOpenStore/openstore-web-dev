#!/usr/bin/env node

'use strict';

const db = require('../db');
const PackageSearch = require('../db/package/search');

db.Package.find({published: true}).then((pkgs) => {
    return PackageSearch.bulk(pkgs);
}).then(() => {
    console.log('done');
    process.exit(0);
}).catch((err) => {
    console.log(err);
    process.exit(1);
});
