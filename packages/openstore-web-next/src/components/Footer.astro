---
import { initializeI18N } from "@/lib/i18n";
import { t } from "i18next";
import LanguageSelect from "./LanguageSelect";

await initializeI18N(Astro.currentLocale);
---

<footer class="bg-primary text-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="flex flex-col-reverse md:flex-row md:justify-between py-3 md:py-4">
      <div class="text-sm">
        <p>
          Built and maintained by <a href="https://bhdouglass.com/" class="text-ubuntu-orange">Brian Douglass</a>
        </p>
        <p>
          Learn more about <a href="https://ubuntu-touch.io/" class="text-ubuntu-orange">Ubuntu Touch</a>
          and the <a href="https://ubports.com/en/" class="text-ubuntu-orange">UBports Foundation</a>.
        </p>
        <p>
          <a href="https://gitlab.com/theopenstore" class="text-ubuntu-orange">Open Source Software</a>, consider <a
            href="https://liberapay.com/OpenStore/"
            class="text-ubuntu-orange">donating</a
          > to keep the server running!
        </p>
      </div>

      <div class="text-sm flex flex-col my-4 md:my-0">
        <a href="https://gitlab.com/theopenstore/openstore-meta/issues" class="text-ubuntu-orange">{t("Report an Issue")}</a>
        <a href="/telegram" class="text-ubuntu-orange">{t("Chat with us on Telegram")}</a>
        <a href="https://stats.uptimerobot.com/R6Z8mtJ8P" class="text-ubuntu-orange">{t("Site Status")}</a>
      </div>

      <div class="text-sm flex flex-col mt-4 md:mt-0">
        <LanguageSelect currentLocale={Astro.currentLocale} currentPath={Astro.url.pathname} client:idle />
      </div>
    </div>
  </div>
</footer>
