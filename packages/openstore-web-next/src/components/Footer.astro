---
import { initializeI18N } from "@/lib/i18n";
import { t } from "i18next";

await initializeI18N(Astro.currentLocale);
---

<footer class="bg-primary text-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="md:flex md:justify-between py-3 md:py-4">
      <div class="text-sm">
        <p>
          Built and maintained by <a href="https://bhdouglass.com/" class="underline">Brian Douglass</a>
        </p>
        <p>
          Learn more about <a href="https://ubuntu-touch.io/" class="underline">Ubuntu Touch</a>
          and the <a href="https://ubports.com/en/" class="underline">UBports Foundation</a>.
        </p>
        <p>
          <a href="https://gitlab.com/theopenstore" class="underline">Open Source Software</a>,
          consider <a href="https://liberapay.com/OpenStore/" class="underline">donating</a> to keep the server running!
        </p>
      </div>

      <div class="text-sm flex flex-col">
      </div>

      <div class="text-sm flex flex-col mt-4 md:mt-0">
        <a href="https://gitlab.com/theopenstore/openstore-meta/issues" class="underline">{t("Report an Issue")}</a>
        <a href="/telegram" class="underline">{t("Chat with us on Telegram")}</a>
        <a href="https://stats.uptimerobot.com/R6Z8mtJ8P" class="underline">{t("Site Status")}</a>
      </div>
    </div>
  </div>
</footer>
