---
import type { AppData } from "@/lib/schema";
import SvgBuggy from "@/components/icons/Buggy";
import SvgHappy from "@/components/icons/Happy";
import SvgNeutral from "@/components/icons/Neutral";
import SvgThumbsDown from "@/components/icons/ThumbsDown";
import SvgThumbsUp from "@/components/icons/ThumbsUp";

export type Props = {
  app: {
    ratings: AppData['ratings']
  }
};

const { app: { ratings } } = Astro.props;
---

<ul class="flex gap-4">
  <li class="flex gap-2">
    <SvgThumbsUp />
    {ratings.THUMBS_UP}
  </li>
  <li class="flex gap-2">
    <SvgHappy />
    {ratings.HAPPY}
  </li>
  <li class="flex gap-2">
    <SvgNeutral />
    {ratings.NEUTRAL}
  </li>
  <li class="flex gap-2">
    <SvgThumbsDown />
    {ratings.THUMBS_DOWN}
  </li>
  <li class="flex gap-2">
    <SvgBuggy />
    {ratings.BUGGY}
  </li>
</ul>
