---
import Loading from "@/components/Loading";
import StatsPage from "@/components/manage/StatsPage";
import BaseLayout from "@/layouts/BaseLayout.astro";

export const prerender = false;

const { id } = Astro.params;
if (!id) {
  return Astro.redirect("/manage/");
}

const apikey = Astro.cookies.get("apikey")?.value;
if (!apikey) {
  return Astro.redirect("/login/");
}
---

<BaseLayout
  title="OpenStore"
  pageTitle="Manage App Stats | OpenStore"
  description="The open source app store for Ubuntu Touch"
  schema={undefined}
>
  <StatsPage id={id} client:only="preact" />
</BaseLayout>
