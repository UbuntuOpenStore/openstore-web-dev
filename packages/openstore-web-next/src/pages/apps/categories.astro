---
import BaseLayout from "@/layouts/BaseLayout.astro";
import CategoryList from "@/components/CategoryList.astro";
import { initializeI18N } from "@/lib/i18n";
import { t } from "i18next";
import { generateSchema } from "@/lib/json-schema";

await initializeI18N(Astro.currentLocale);
---

<BaseLayout
  title="OpenStore"
  pageTitle={t("Categories") + " | OpenStore"}
  description={t("The open source app store for Ubuntu Touch")}
  schema={generateSchema(t("Categories"), [
    { name: "Apps", path: "/apps/" },
    { name: "Categories", path: "/apps/categories/" },
  ])}
>
  <section class="section">
    <CategoryList />
  </section>
</BaseLayout>
