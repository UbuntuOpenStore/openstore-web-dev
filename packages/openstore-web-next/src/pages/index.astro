---
export const prerender = false;

import HighlightedApps from "@/components/HighlightedApps.tsx";
import BaseLayout from "../layouts/BaseLayout.astro";
import { DiscoverSchema } from "../schema";
import AppList from "@/components/AppList";

const discoverResponse = await fetch("https://open-store.io/api/v4/discover?channel=focal");
const discoverData = await discoverResponse.json();
const { highlights, categories } = DiscoverSchema.parse(discoverData.data);
---

<BaseLayout title="OpenStore" pageTitle="OpenStore" description="The open source app store for Ubuntu Touch">
  <section class="section text-center">
    <h1 class="text-4xl">OpenStore</h1>
    <p>The open source app store for <a href="https://ubuntu-touch.io/" class="underline">Ubuntu Touch</a></p>
  </section>

  <section class="py-3 px-3 mx-auto w-full max-w-2xl md:px-4">
    <HighlightedApps highlights={highlights} client:load />
  </section>

  <section class="section space-x-4">
    {
      categories.map((category, index) => (
        <>
          <div class="text-center">
            {/* TODO category link */}
            <h2 class="text-2xl">{category.name}</h2>
            <p class="mb-4">{category.tagline}</p>

            <AppList apps={category.apps} />
          </div>

          {index < categories.length - 1 && (
            <div class="mx-auto w-full max-w-6xl h-1 bg-ubuntu-gradient rounded-full mb-4" />
          )}
        </>
      ))
    }
  </section>
</BaseLayout>
